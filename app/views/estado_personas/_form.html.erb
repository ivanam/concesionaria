<%= nested_form_for(estado_persona, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if estado_persona.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h5><b><%= fa_icon "exclamation-circle", text: "AtenciÃ³n! Ocurrieron los siguientes errores" %></b></h5>
      <ul>
      <% estado_persona.errors.messages.values.each do |msg| %>
        <%msg.each do  |m| %>
          <li><%= m %></li>
        <%end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
       <%= f.collection_select(:estado_id, Estado.all, :id, :descripcion, {:prompt => true},:style=>"width:100%") %>
    </div>
  </div>
  <div class="form-group">
  <label class="col-sm-2 control-label">Vendedor</label>
    <div class="col-sm-10"> 
      <%punto_venta_id = current_user.punto_venta_id%>
          <%= f.collection_select(:vendedor_id, Vendedor.where(:punto_venta_id => punto_venta_id ).where('baja is null or baja = false'), :id, :to_s, {:prompt => true},:style=>"width:50%") %>
    </div>
  </div>
  </br>
   <div class="form-group">
    <%= f.label :fecha_inicio, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.date_field :fecha_inicio, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :fecha_fin, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.date_field :fecha_fin, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" ,value: "Guardar"%>
    </div>
  </div>
<% end %>

<script type="text/javascript">    
  $('document').ready(function(){
    $('form').on('nested:fieldAdded', function() {
      /* apply select2 styling */ 
      $('select').select2({
        theme: "bootstrap",
        language: "es"
      }); 
    });
  });
</script>
