<div class="card card-container">
  <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
  <p id="profile-name" class="profile-name-card"></p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name, ), :html => {:class => "form-signin"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Dirección de Email", :class => "form-control", :type => "email", :id => "inputEmail"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Contraseña"  %>
    </div>

    <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "inputPassword", :placeholder => "Repetir Contraseña"  %>
    
    </div>

    <div class="actions">
      <%= f.submit "Registrarse", :class => "btn btn-lg btn-primary btn-block btn-signin" %>
      
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  
</div>