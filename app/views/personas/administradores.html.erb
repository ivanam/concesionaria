<div class="col-sm-12" style="margin-top: 15px;">
  <div class="content-box h-100">


<div class="page-header">
<h2 style="text-align: center;font-weight: 600;">Administradores</h2>
  <%= link_to new_administrador_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo administrador" %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Apellido</th>
        <th>Nombre</th>
        <th>Cuil</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th class="col-md-2">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @personas.each do |p| %>
        <tr>
        <td><%= p.apellido %></td>
        <td><%= p.nombre %></td>
        <td><%= p.cuit %></td>
        <td><%= p.telefono %></td>
        <td><%= p.email %></td>
        <td class="text-center">
        <%= link_to edit_administrador_path(persona: p.id), class: 'btn btn-sm btn-primary' do %>
            <span class="fa fa-pencil"></span>
          <% end %>
          <%= link_to p, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
            <span class="fa fa-trash"></span>
          <% end %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>


<br>
