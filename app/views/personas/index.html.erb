<h1>Personas</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Apellido</th>
        <th>Nombre</th>
        <th>Edad</th>
        <th>Email</th>
        <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @personas.each do |persona| %>
        <tr>
        <td><%= persona.apellido %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.age(persona.fecha_nacimiento) %></td>
        <td> ? </td>
          <td class="text-center">
            <%= link_to persona, class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
            <%= link_to edit_persona_path(persona), class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to persona, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="page-header">
  <%= link_to new_persona_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nueva persona" %>
  <% end %>
</div>
