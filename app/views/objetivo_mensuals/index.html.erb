<div class="col-sm-12" style="margin-top: 15px;">
  <div class="content-box h-100">

   <div class="page-header">
     <h2 style="text-align: center;font-weight: 600;">Objetivos Mensuales</h2>
        <%= link_to new_objetivo_mensual_path, class: 'btn btn-primary' do %>
        <%= fa_icon "plus", text: "Nuevo Objetivo" %>
        <% end %>
   </div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>CSI Real</th>
        <th>Descripcion</th>
        <th>Fecha creacion</th>
        <th>Tipo de objetivo</th>
        <th>Cantidad propuesta</th>
        <th>Mes</th>
        <th>Anio</th>
        <th>Usuario</th>
        <th>Vendedor</th>
        <th>Punto venta</th>
        <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @objetivo_mensuals.each do |objetivo_mensual| %>
        <tr>
        <td><%= objetivo_mensual.csi_real %></td>
        <td><%= objetivo_mensual.descripcion %></td>
        <td><%= objetivo_mensual.created_at %></td>
        <td><%= objetivo_mensual.tipo_objetivo.descripcion %></td>
        <td><%= objetivo_mensual.cantidad_propuesta %></td>
        <td><%= objetivo_mensual.mes %></td>
        <td><%= objetivo_mensual.anio %></td>
        <td><%= objetivo_mensual.user %></td>
        <td><%= objetivo_mensual.vendedor.to_s %></td>
        <td><%= objetivo_mensual.punto_venta.to_s %></td>
          <td class="text-center">
            <%= link_to objetivo_mensual, class: 'btn btn-sm btn-default' do %>
              <span class="fa fa-eye"></span>
            <% end %>
            <%= link_to edit_objetivo_mensual_path(objetivo_mensual), class: 'btn btn-sm btn-default' do %>
              <span class="fa fa-pencil"></span>
            <% end %>
            <%= link_to objetivo_mensual, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="fa fa-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>



<br>