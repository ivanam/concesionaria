
<div class="col-sm-12" style="margin-top: 15px;">
  <div class="content-box h-100">

    <div class="page-header">
      <h2 style="text-align: center;font-weight: 600;">Punto de Venta</h2>
      <%= link_to new_punto_ventum_path, class: 'btn btn-primary' do %>
        <%= fa_icon "plus", text: "Nuevo punto de venta" %>
      <% end %>
    </div>

    
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Concesionaria</th>
            <th>Nombre</th>
            <th>Domicilio</th>
            <th>Persona</th>
            <th class="col-md-2">Acciones&nbsp;</th>
          </tr>
        </thead>


      <tbody>
        <% @punto_venta.each do |punto_ventum| %>
          <tr>
            <% Concesionarium.where(:id => punto_ventum.concesionaria_id).each do |c| %>
            <% @con = c.nombre  %>
            <td><%= @con %></td>
            <% end %>
            <td><%= punto_ventum.nombre %></td>
            <td><%= punto_ventum.domicilio %></td>
            <td><%= punto_ventum.persona_id %></td>
            <td class="text-center">
                <%= link_to punto_ventum, class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-eye"></span>
                <% end %>
                <%= link_to edit_punto_ventum_path(punto_ventum), class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-pencil"></span>
                <% end %>
                <%= link_to punto_ventum, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
                  <span class="fa fa-trash"></span>
                <% end %>
                <%= link_to select_punto_venta_path(id: punto_ventum), class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-check"></span>
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
