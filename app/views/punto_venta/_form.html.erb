
<%= nested_form_for(punto_ventum, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if punto_ventum.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h5><b><%= fa_icon "exclamation-circle", text: "AtenciÃ³n! Ocurrieron los siguientes errores" %></b></h5>
      <ul>
      <% punto_ventum.errors.messages.values.each do |msg| %>
        <%msg.each do  |m| %>
          <li><%= m %></li>
        <%end %>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :concesionaria_id, :class => "hidden" %>
  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
