<div class="col-sm-12" style="margin-top: 15px;">
  <div class="content-box h-100">

  <div class="page-header">
     <h2 style="text-align: center;font-weight: 600;">Objetivos Semanales</h2>
         <%= link_to new_objetivo_semanal_path, class: 'btn btn-primary' do %>
         <%= fa_icon "plus", text: "Nueva Carga" %>
         <% end %>
   </div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Objetivo mensual</th>
        <th>Fecha de creacion</th>
        <th>Cantidad propuesta</th>
        <th>Numero semana</th>
        <th>Vendedor</th>
        <th>Punto venta</th>
        <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @objetivo_semanals.each do |objetivo_semanal| %>
        <tr>
          <% TipoObjetivo.where(:id => objetivo_semanal.tipo_objetivo_id).each do |r| %>
          <% @tobj = r.descripcion %>
          <td><%= @tobj %></td>
          <% end %>
          <td><%= objetivo_semanal.fecha_creacion %></td>
          <td><%= objetivo_semanal.cantidad_propuesta %></td>
          <td><%= objetivo_semanal.numero_semana %></td>
          <td><%= objetivo_semanal.vendedor.to_s %></td>
          <td><%= objetivo_semanal.punto_ventum.to_s %></td>
          <td class="text-center">
            <%= link_to objetivo_semanal, class: 'btn btn-sm btn-default' do %>
              <span class="fa fa-eye"></span>
            <% end %>
            <%= link_to edit_objetivo_semanal_path(objetivo_semanal), class: 'btn btn-sm btn-default' do %>
              <span class="fa fa-pencil"></span>
            <% end %>
            <%= link_to objetivo_semanal, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="fa fa-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
<br/>

