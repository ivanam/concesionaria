<div class="col-sm-12" style="margin-top: 15px;">
  <div class="content-box h-100">

    <div class="page-header">
      <h2 style="text-align: center;font-weight: 600;">Concesionarias</h2>
      <%= link_to new_concesionarium_path, class: 'btn btn-primary' do %>
        <%= fa_icon "plus", text: "Nueva Concesionaria" %>
      <% end %>
      
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Logo</th>
            <th>Nombre</th>
            <th>Cantidad de Puntos de Venta permitidos</th>
            <th>Cantidad de Vendedores permitidos</th>
            <th>Fecha alta</th>
            <th>Fecha baja</th>
            <th>Usuario creador</th>
            <th class="col-md-2">&nbsp;</th>
          </tr>
        </thead>

        <tbody>
          <% @concesionaria.each do |concesionarium| %>
            <tr>
              <td><%= image_tag concesionarium.logo.url(:medium), :class=>"img-fluid", :style=>"width: auto; max-height:50px;" %></td>
              <td><%= concesionarium.nombre %></td>
              <td><%= concesionarium.cantPv %></td>
              <td><%= concesionarium.cantVend %></td>
              <td><%= concesionarium.fecha_alta %></td>
              <td><%= concesionarium.fecha_baja %></td>
              <td><%= concesionarium.user.email %></td>
              <td class="text-center">
                <%= link_to concesionarium, class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-eye"></span>
                <% end %>
                <%= link_to edit_concesionarium_path(concesionarium), class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-pencil"></span>
                <% end %>
                <%= link_to concesionarium, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
                  <span class="fa fa-trash"></span>
                <% end %>
                <%= link_to select_concesionaria_path(id: concesionarium), class: 'btn btn-sm btn-default' do %>
                  <span class="fa fa-check"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>